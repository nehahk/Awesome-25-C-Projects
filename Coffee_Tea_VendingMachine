#include <stdio.h>

int main() {
    int choice;

    printf("Welcome!\n");
    printf("Please select Tea or Coffee:\n");
    printf("1. Coffee\n");
    printf("2. Tea\n");
    printf("Enter your choice (1 or 2): ");
    scanf("%d", &choice);

    if (choice == 1) {
        printf("You have selected Coffee.\n");
    } else if (choice == 2) {
        printf("You have selected Tea.\n");
    } else {
        printf("Invalid choice!");
    }

    return 0;
}
